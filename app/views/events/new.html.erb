<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br>

        <% if @event.errors.any? %>
            <% @event.errors.full_messages.each do |message| %>
              <div class="alert alert-danger" role="alert">
                <%= message %>
              </div>
            <% end %>
        <% end %>
    
        <%= form_for @event do |f| %>
          <h1 class="h3 mb-3 font-weight-normal text-center">Create your event</h1>
          <br>

          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, autocomplete: "title", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :start_date, "Start date and time (format: YYYY-MM-DD HH:MM:SS)" %><br />
            <%= f.text_field :start_date, autofocus: true, autocomplete: "YYYY-MM-DD HH-MM-SS", class: "form-control" %>
          </div>

          <div class="form-group">
            <label>Location</label>
            <%= f.text_field :location, autocomplete: "location", class: "form-control" %>
          </div>

          <div class="form-group">
            <label>Duration</label>
            <%= f.text_field :duration, autocomplete: "duration", class: "form-control" %>
          </div>

          <div class="form-group">
            <label>Price</label>
            <%= f.text_field :price, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <label>Description</label>
            <%= f.text_area :description, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-outline-success">Create event</button>
          </div>

        <% end %>
    </div>
  </div>
</div>