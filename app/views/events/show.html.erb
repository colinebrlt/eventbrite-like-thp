<div class="container text-center">
  <h2 class="p-4"> <%= @event.title %> </h2>

  <p class="p-2"><b>Organized by:</b> <%= @event.event_admin.email  %></p>
  <p class="p-2"><b>Start date and time:</b> <%= @event.start_date  %></p>
  <p class="p-2"><b>End date and time:</b> <%= @end_date_time  %></p>
  <p class="p-2"><b>Location:</b> <%= @event.location %></p>
  <p class="p-2"><b>Price:</b> <%= @event.price %> â‚¬</p>
  <p class="p-2"><b>Number of participants:</b> <%=  %></p>
  <p class="p-2"><b>Description:</b> <%= @event.description %></p>

  <%= link_to "Home", root_path, class: "d-inline p-2 btn btn-primary m-2" %>
    
  <% if @event.event_admin == current_user %>
    <%= link_to "Admin event page", event_attendances_path(@event), class: "d-inline p-2 btn btn-warning m-2" %>
  <% elsif @event.users.select{ |user| user == current_user }.count == 0 %>
    <%= link_to "Register to this event", new_event_attendance_path(@event), class: "d-inline p-2 btn btn-info m-2" %>
  <% else %>
    <%= link_to "Already registered!", "#", class: "d-inline p-2 btn btn-light m-2 disabled" %>
  <% end %>

</div>